@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container d-flex justify-content-center py-5 text-light">
    <div class="w-100" style="max-width: 500px;">
        <h1 class="text-center display-5 mb-5">Create an account</h1>

        <form method="post" class="form p-4 rounded shadow-sm">
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.Query["returnUrl"]" />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Input.Name" class="form-label">Name</label>
                <input asp-for="Input.Name" class="form-control bg-dark text-light" />
                <span asp-validation-for="Input.Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Surname" class="form-label">Surname</label>
                <input asp-for="Input.Surname" class="form-control bg-dark text-light" />
                <span asp-validation-for="Input.Surname" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Phone" class="form-label">Phone</label>
                <input asp-for="Input.Phone" class="form-control bg-dark text-light" />
                <span asp-validation-for="Input.Phone" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control bg-dark text-light" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control bg-dark text-light" />
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control bg-dark text-light" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn">Register</button>
            </div>

            <div class="text-center mt-3">
                @{
                    var returnUrl = ViewContext.HttpContext.Request.Query["returnUrl"].ToString();
                }
                <p>
                    Already have an account?
                    <a href="/Login?returnUrl=@returnUrl" class="link-light">Login here</a>
                </p>
            </div>
        </form>
    </div>
</div>

<style>
    .form {
        background-color: #323035;
    }

    .form-control:focus {
        background-color: #2b2a2e;
        border-color: #575459;
        color: #fff;
        outline: none;
        box-shadow: 0 0 0 0.2rem rgba(255, 255, 255, 0.1);
    }

    .btn {
        background-color: #424045;
        color: #fff;
        border: none;
    }

    .btn:hover {
        background-color: #575459;
        color: #fff;
    }

    .link-light:hover {
        color: #ccc;
        text-decoration: underline;
    }
</style>
