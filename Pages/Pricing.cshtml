@page
@model PricingModel
@{
ViewData["Title"] = "Pricing";
}

<div class="container mx-auto max-w-4xl p-5 text-light">
    <h1 class="text-center display-5 mb-5">Ticket Pricing</h1>
    <div class="container d-flex justify-content-center py-5">
        <div class="pricing-box rounded p-4 shadow-sm w-100" style="max-width: 800px;">
            <div class="row align-items-center mb-3">
                <div class="col-md-2 fw-semibold">Anime</div>
                <div class="col d-flex flex-wrap gap-2">
                    <div class="ticket">
                        <div class="ticket-label">14+ days<br><span class="text-muted small">ahead</span></div>
                        <div class="ticket-price">19.90 zł</div>
                    </div>
                    <div class="ticket">
                        <div class="ticket-label">8–13 days<br><span class="text-muted small">ahead</span></div>
                        <div class="ticket-price">23.90 zł</div>
                    </div>
                    <div class="ticket">
                        <div class="ticket-label">4–7 days<br><span class="text-muted small">ahead</span></div>
                        <div class="ticket-price">27.90 zł</div>
                    </div>
                    <div class="ticket">
                        <div class="ticket-label">1–3 days<br><span class="text-muted small">ahead</span></div>
                        <div class="ticket-price">29.90 zł</div>
                    </div>
                    <div class="ticket">
                        <div class="ticket-label">Same day<br><span class="text-muted small">screening</span></div>
                        <div class="ticket-price">31.90 zł</div>
                    </div>
                </div>
            </div>

            <hr>

            <div class="d-flex align-items-center mt-3">
                <i class="bi bi-globe2 fs-4 me-2"></i>
                <span class="fw-semibold">Online booking fee: 1.50 zł per ticket</span>
            </div>
        </div>
    </div>
</div>

<style>
    .pricing-box {
        background: #323035;
    }

    .ticket {
        background: #525055;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        text-align: center;
        min-width: 100px;
        font-weight: 600;
        box-shadow: inset -4px 0 #424045, inset 4px 0 #424045;
    }

    .ticket-label {
        font-size: 0.85rem;
    }

    .ticket-price {
        font-size: 1.1rem;
        font-weight: bold;
    }
</style>
