@page
@model PricingModel
@{
ViewData["Title"] = "Pricing";
}

<div class="container mx-auto max-w-4xl p-5 text-light">
    <h1 class="text-center display-5 mb-5">Ticket Pricing</h1>
    <div class="container d-flex justify-content-center py-5">
        <div class="bg-custom rounded p-4 shadow-sm w-100" style="max-width: 800px;">
            <div class="col d-flex justify-content-center flex-wrap gap-2">
            @foreach (var tier in Model.PriceTiers)
            {
                <div class="ticket">
                    <div class="ticket-label">@tier.Label<br><span class="text-muted small">@tier.Description</span></div>
                    <div class="ticket-price">PLN @tier.Price.ToString("0.00")</div>
                </div>
            }
            </div>

            <hr>

            <div class="d-flex align-items-center mt-3">
                <i class="bi bi-globe2 fs-4 me-2"></i>
                <span class="fw-semibold">Online booking fee: 0.00z≈Ç</span>
            </div>
        </div>
    </div>
</div>

<style>
    .ticket {
        background: #525055;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        text-align: center;
        min-width: 100px;
        font-weight: 600;
        box-shadow: inset -4px 0 #424045, inset 4px 0 #424045;
    }

    .ticket-label {
        font-size: 0.85rem;
    }

    .ticket-price {
        font-size: 1.1rem;
        font-weight: bold;
    }
</style>
