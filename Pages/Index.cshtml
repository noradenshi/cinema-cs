@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
    var today = DateTime.Today;
}

<div class="container d-flex justify-content-center py-5 text-light">
    <div class="w-100" style="max-width: 1000px;">
        <h1 class="text-center display-5 mb-5">Now Playing</h1>

        <div class="d-flex gap-2 justify-content-center mb-4 flex-wrap">
            @for (int i = 0; i < 7; i++)
            {
                var date = today.AddDays(i);
                var isActive = date.Date == (Request.Query.ContainsKey("date") && DateTime.TryParse(Request.Query["date"], out var selectedDate) ? selectedDate.Date : today).Date;
                <a href="?date=@date.ToString("yyyy-MM-dd")"
                   class="btn btn-outline-light@(isActive ? " active active-date text-dark" : "")">
                    @date.ToString("ddd, MMM d")
                </a>
            }
        </div>

        <div class="screenings table-responsive rounded shadow-sm p-3">
            <table class="table table-hover align-middle mb-0">
                <thead class="stext-dark">
                    <tr>
                        <th>Movie</th>
                        <th>Screenings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model.Movies)
                    {
                        <tr>
                            <td class="fw-semibold">@movie.Title</td>
                            <td>
                                @foreach (var screening in movie.Screenings)
                                {
                                    <a href="@Url.Page("Screening", new { id = screening.Id })"
                                       class="btn btn-sm btn-outline-light me-1 mb-1"
                                       style="min-width: 90pt;">
                                        <big>@screening.Date.ToString("HH:mm")</big>
                                        <div><small>@screening.Type</small></div>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .screenings {
        background: #323035;
    }

    .screenings thead th {
        background: #424045;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .btn {
        background-color: #424045;
        color: #fff;
        border: none;
    }

    .btn:hover,
    .btn:focus,
    .btn:active,
    .btn:focus-visible {
        outline: none;
        box-shadow: none;
        background-color: #575459;
        color: #fff;
    }

    .active-date {
        background-color: #C2C0C5 !important;
        color: #000 !important;
    }
</style>
